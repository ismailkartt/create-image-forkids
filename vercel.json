{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    { "src": "/_next/static/(.*)", "dest": "/_next/static/$1" },
    { "src": "/api/(.*)", "dest": "/api/$1" }, 
    { "src": "/(.*)", "dest": "/index.html" },
    {
      "src": "/(.*)",        
      "dest": "/"                
    },
    {
      "src": "/api/chat",
      "methods": ["POST", "OPTIONS"],
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "GET, POST, OPTIONS",
        "Access-Control-Allow-Headers": "Content-Type, Authorization"
      }
    }
  ],
  "functions": {
    "api/image/*.ts": {
      "maxDuration": 60
    }
  }
}